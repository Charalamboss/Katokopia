
<p class="comments">
  <strong><%= @article.title %></strong>
  
</p>
 <p class="article-body">
  <%=sanitize(@article.body, tags: %w(b strong em i a)).html_safe %>
</p>
</div>

<% if @article.image? %>
<div id="carouselwithIndicators" class="carousel slide w-50 article-pic" data-ride="carousel">
      
      <ol class="carousel-indicators">
           
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    
           <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
         
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
         
   </ol>
        
   <div class="carousel-inner">

       <div class="carousel-item active ">
  
        	<img class="d-block w-100" src=<%=@article.image[0]%> alt="First slide">

        </div>
         
     <%@article.image.each do |i| %>
    <div class="carousel-item ">
      <img class="d-block w-100 article-index" src= "<%=i%>" alt="First slide">
    </div>
     <% end %>
      
        
    <a class="carousel-control-prev" href="#carouselwithIndicators" role="button" data-slide="prev">
     
       <span class="carousel-control-prev-icon" aria-hidden="true"></span>
       
     <span class="sr-only">Previous</span>
            </a>
   
     <a class="carousel-control-next" href="#carouselwithIndicators" role="button" data-slide="next">
           
 	<span class="carousel-control-next-icon" aria-hidden="true"></span>
  
         <span class="sr-only">Next</span>

     </a>
  
	</div>
    
	  </div>
<% end %>


<div class="comments">
	<h2 >Comments</h2>
	<%= render @article.comments %>
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
 </div>



<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>


<p class="comments">
  <strong><%= @article.title %></strong>
  
</p>
 
<img class=" article-pic" src="<%= @article.image %>">
 <div class="article-body">
<p>
  <strong>Text:</strong>
  <%=sanitize(@article.body, tags: %w(b strong em i a)).html_safe %>
</p>
</div>


<div class="comments">
	<h2 >Comments</h2>
	<%= render @article.comments %>
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
 </div>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
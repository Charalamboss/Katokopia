<div class="container-fluid">
  <div class="raw">
    <div class="col-md-12"><h1>Listing articles</h1></div>
  </div>
</div>
 <%= link_to 'New article', new_article_path %>

  <% @articles.each do |article| %>
  <div class="container-fluid article-items">
 <div class="raw">
    <div class="col-md-3 "><img class=" article-index" src="<%= article.image[0] %>"></div>
    <div class="col-md-2"><%= article.title[0..50] %></div>
    <div class="col-md-3 article-text"><%=strip_tags(article.body[0..150]+" ...")%></div>
    <div class="col-md-1"><%= link_to 'Show', article_path(article) %></div>
    <div class="col-md-1"><%= link_to 'Edit', edit_article_path(article) %></div>
    <div class="col-md-2"><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></div>
 </div>
 </div>
 <% end %>

 

  